<div class="container" style="padding-top: 50px;">
  <div class="row">
    <div class="col-md-12">
      <div class="list-group">
        <%= for job <- @jobs do %>
				  <!-- List item start -->
          <a class="list-group-item list-group-item-action box" data-toggle="collapse"
            href="#collapseJob<%= job.id %>" role="button" aria-expanded="false" aria-controls="collapseExample">
            <div class="row">

              <!-- Job Logo -->
              <div class="col-md-2 text-center d-flex align-items-center justify-content-center">
                <img class="dashboard-img" src="<%= job.logo  %>" width="70%"/>
              </div>

              <!-- Job Main Description -->
              <div class="col-md-8 text-center">
                <div class="row">
                  <div class="col-md-5">
                    <h3 class="osc_font"><%= job.position %></h3>
								    <i class="fas fa-globe-americas"></i>&nbsp; <%= job.location_restricted %>
                  </div>
                  <div class="col-md-7 text-center">
								    <br><span class="badge badge-secondary primary_tag"> <i class="fas fa-tag"></i>&nbsp;<%= job.primary_tag %> </span>
        				    &nbsp;
                    <%= for tag <- job.extra_tags do %>
                    	<span class="badge badge-pill extra_tag"><small><b><%= tag %></b></small></span> &nbsp;
        				    <% end %>
                  </div>
                </div>
              </div>

              <!-- Apply button -->
              <div class="col-md-2 text-center">
                <button class="btn btn-light"
                role="link"> <i class="fas fa-eye"></i>&nbsp; Ver </button>
                <br><small class="font-red"><b><i class="fas fa-fire"></i> &nbsp; ¡<%= job.visits %> la han visto!</small></b>
              </div>
            </div>
          </a>
				  <!-- List item end -->
				  <!-- Detail -->
          <div class="collapse" id="collapseJob<%= job.id %>">
            <div class="row">
              <div class="col-md-12">
								<br><br>
								<div class="jumbotron blue_jumbotron">

                	<div class="row">
                    <div class="col-md-6 text-center">
                      <span class="osc_font subtitle"> Remote Jobs </span><br>
    	                <img src="https://res.cloudinary.com/carlogilmar/image/upload/v1565636790/remotejobs/remote2_h8fvlb.png" width="100%">
                    </div>
                    <div class="col-md-6 text-center">
                      <h1 class="osc_font font-red"><%= job.position %></h1>
                      <br><strong class="osc_font">D E T A L L E</strong>
                      <br>
								      <h3> <i class="fas fa-building"></i> &nbsp; <%= job.company_name %></h3>
								      <p> Salario Anual: <strong>$ <%= job.salary %></strong></p>
                      <i class="fas fa-globe-americas"></i>&nbsp; <%= job.location_restricted %>
                    </div>
                  </div>

                	<div class="row">
                    <div class="col-md-6">
  								  <h1 class="display-5 job_title"> <i class="fas fa-hammer"></i> &nbsp; Descripción</h1>
                    <hr>
								    <%= raw(job.description) %>
                    </div>
                    <div class="col-md-6">
  								  <h1 class="display-5 job_title"> <i class="fas fa-hammer"></i> &nbsp; Detalles de la vacante</h1>
                    <hr>
								    <%= raw(job.apply_description) %>
                    </div>
                  </div>

                	<div class="col-md-12">
										<br>
  								  <h1 class="display-5 job_title">Responsabilidades</h1>
                    <hr>
								    <%= raw(job.responsabilities) %>
									  <br>
  								  <h1 class="display-5 job_title">Requerimientos</h1>
                    <hr>
								    <%= raw(job.requirements) %>
									  <br>
									</div>
                	<div class="col-md-12 text-center">
									<br>
									<button class="btn btn-success btn-block"
									role="link" phx-click="update_counter" phx-value="<%= job.id %>"  onclick="open_url('<%= job.url %>')"> <h3><i class="fas fa-check-circle"></i>&nbsp; Aplicar para <b><%= job.position %></b></h3> </button>
									</div>
									</div>
              </div>
            </div>
          </div>
				  <!-- Detail end -->
        <% end %>
      </div>
    </div>
  </div>
</div>

